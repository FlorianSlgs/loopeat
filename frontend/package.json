{
  "name": "loop-eat",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0 --port 4200",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "serve:ssr:loop-eat": "node dist/loop-eat/server/server.mjs",
    "serve:prod": "node dist/loop-eat/server/server.mjs",
    "docker:build:dev": "docker build -f Dockerfile.dev -t frontend-angular-dev .",
    "docker:build:prod": "docker build -f Dockerfile -t frontend-angular-prod .",
    "docker:dev": "docker run -p 4200:4200 -v %cd%:/usr/src/app -v /usr/src/app/node_modules --name frontend-angular-dev frontend-angular-dev",
    "cy:open": "cypress open",
    "e2e": "ng e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:watchAll": "jest --watchAll",
    "test:coverage": "jest --coverage"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.11",
    "@angular/compiler": "^20.3.11",
    "@angular/core": "^20.3.11",
    "@angular/forms": "^20.3.11",
    "@angular/platform-browser": "^20.3.11",
    "@angular/platform-server": "^20.3.11",
    "@angular/router": "^20.3.11",
    "@angular/ssr": "^20.3.3",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/leaflet": "^1.9.20",
    "express": "^5.1.0",
    "leaflet": "^1.9.4",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.11",
    "@cypress/schematic": "^4.1.4",
    "@types/express": "^5.0.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.25",
    "cypress": "15.6.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^15.0.3",
    "jsdom": "^27.2.0",
    "source-map": "^0.7.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  }
}
